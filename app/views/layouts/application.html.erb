<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

　<header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/admin">
            <%= image_tag('sweets_logo.jpg') %>
          </a>
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">

              <% if customer_signed_in? %>
                <li>
                  <%= link_to public_customers_path, class:"nav-link text-light" do %>
                    マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to public_items_path, class:"nav-link text-light" do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to public_cart_items_path, class:"nav-link text-light" do %>
                    カート
                  <% end %>
                </li>
                <li>
                  <%= link_to public_orders_path, class:"nav-link text-light" do %>
                    注文履歴一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link text-light" do %>
                    ログアウト
                  <% end %>
                </li>
                <% elsif admin_signed_in? %>
                <li>
                  <%= link_to admin_items_path, class:"nav-link text-light" do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_admin_item_path, class:"nav-link text-light" do %>
                    商品新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path, class:"nav-link text-light" do %>
                    会員一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_orders_path, class:"nav-link text-light" do %>
                    注文履歴一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do %>
                    ログアウト
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to about_path, class:"nav-link text-light" do %>
                    About
                  <% end %>
                </li>
                <li>
                  <%= link_to public_items_path, class:"nav-link text-light" do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class:"nav-link text-light" do %>
                    新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to customer_session_path, class:"nav-link text-light" do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

  <%= yield %>

  <footer class="bg-dark pt-5 pb-4">
    <div class="container">
      <div class="rows">
      </div>
    </div>
  </footer>

</html>

