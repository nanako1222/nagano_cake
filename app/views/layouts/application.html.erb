<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
<div class="wrapper">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">


          <% if customer_signed_in? %>
          　<a class="navbar-brand" href="/">
              <%= image_tag('sweets_logo.jpg') %>
            </a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to customers_my_page_path, class:"nav-link text-light" do %>
                    <strong>マイページ</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class:"nav-link text-light" do %>
                    <strong>商品一覧</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to cart_items_path, class:"nav-link text-light" do %>
                    <strong>カート</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to orders_path, class:"nav-link text-light" do %>
                    <strong>注文履歴一覧</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link text-light" do %>
                    <strong>ログアウト</strong>
                  <% end %>
                </li>
              </ul>
            </div>
          <% elsif admin_signed_in? %>
            <a class="navbar-brand" href="/admin">
              <%= image_tag('sweets_logo.jpg') %>
            </a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to admin_items_path, class:"nav-link text-light" do %>
                    <strong>商品一覧</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_admin_item_path, class:"nav-link text-light" do %>
                    <strong>商品新規登録</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path, class:"nav-link text-light" do %>
                    <strong>会員一覧</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_path, class:"nav-link text-light" do %>
                    <strong>注文履歴一覧</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do %>
                    <strong>ログアウト</strong>
                  <% end %>
                </li>
              </ul>
            </div>
          <% else %>
            <a class="navbar-brand" href="/">
              <%= image_tag('sweets_logo.jpg') %>
            </a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to about_path, class:"nav-link text-light" do %>
                    <strong>About</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class:"nav-link text-light" do %>
                    <strong>商品一覧</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class:"nav-link text-light" do %>
                    <strong>新規登録</strong>
                  <% end %>
                </li>
                <li>
                  <%= link_to customer_session_path, class:"nav-link text-light" do %>
                    <strong>ログイン</strong>
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer class="pt-5 pb-4">
      <p class="text-center">(c)copy right</p>
    </footer>
  </div>
</html>

