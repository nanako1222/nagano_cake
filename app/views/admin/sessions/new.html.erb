
<div class="container">
  <div class="row">
    <div class='col-10 offset-1'>
      <h4 class="col-3 mt-5"><strong>管理者</strong>ログイン</h4>


        <%= form_with model: @admin, url: admin_session_path do |f| %>

          <div class="field d-grid col-8 text-center mt-4">
            <%= f.label :メールアドレス, class: "w-25" %>
            <%= f.email_field :email, class: "col-6" %>
          </div>

          <div class="field d-grid col-8 text-center">
            <%= f.label :パスワード, class: "w-25" %>
            <%= f.password_field :password, class: "col-6" %>
          </div>

          <!--<% if devise_mapping.rememberable? %>-->
          <!--  <div class="field">-->
          <!--    <%= f.check_box :remember_me %>-->
          <!--    <%= f.label :remember_me %>-->
          <!--  </div>-->
          <!--<% end %>-->

          <div class="actions mt-4">
            <input type="submit" name="commit" value="ログイン" class="btn btn-sm btn-info col-3" data-disable-with="Log in">
          </div>
        <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
