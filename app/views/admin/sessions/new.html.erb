
<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0">

      <h5><strong>管理者</strong>ログイン</h5>

        <%= form_with model: @admin, url: admin_registration_path do |f| %>
          <div class="field d-grid gap-2 col-7 mx-auto">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field d-grid gap-2 col-7 mx-auto">
            <%= f.label :パスワード %>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <!--<% if devise_mapping.rememberable? %>-->
          <!--  <div class="field">-->
          <!--    <%= f.check_box :remember_me %>-->
          <!--    <%= f.label :remember_me %>-->
          <!--  </div>-->
          <!--<% end %>-->

          <div class="actions text-center">
            <input type="submit" name="commit" value="ログイン" class="btn btn-sm btn-info d-grid gap-2 col-3" data-disable-with="Log in">
          </div>
        <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
