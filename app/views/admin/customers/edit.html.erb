<h5><%= "#{@customer.full_name}さんの会員詳細" %></h5>

<%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
　<tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>

  <div class="field">
    <tr>
      <p>氏名</p>
      <%= f.text_field :first_name, autofocus: true, required: true %>
      <%= f.text_field :last_name, autofocus: true, required: true %>
    </tr>
  </div>

  <div class="field">
    <p>フリガナ</p>
    <%= f.text_field :first_name_kana, autofocus: true, required: true %>
    <%= f.text_field :last_name_kana, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :adress, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.number_field :telephone_number, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  </div>
<% end %>