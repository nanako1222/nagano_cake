<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse item-show">
    <h5><%= "#{@customer.full_name}さんの会員詳細" %></h5>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code%></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.adress %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
    <div>
      <%= link_to "編集する", edit_admin_customer_path(@customer), class:"btn btn-success"%>
    </div>
    <div>
      <%= link_to "注文一覧を見る", admin_customers_path(@customer), class:"btn btn-primary"%>
    </div>
</div>