
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-8 offset-md-1">
      <table class="table table-striped table-responsive customers-index">
        <h5>会員一覧</h5>
        <thead>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>