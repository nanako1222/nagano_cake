<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-8 offset-md-1">
      <table class="table table-striped table-responsive item-index">
        <h5>商品一覧</h5>
        <thead>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= "#{item.price}円" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>