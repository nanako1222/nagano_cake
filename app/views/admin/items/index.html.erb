<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <div class ="row mt-5">
        <h4 class="col-2">商品一覧</h4>
        <span class="col-2 ml-5"><%= link_to "新規登録", new_admin_item_path, class:"btn btn-success"%></span>
      </div>
      <table class="table table-hover mt-4">
        <thead class="table-secondary">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= "#{item.price}円" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class = "text-center">
        <p><%= paginate @items %></p>
      </div>
    </div>
  </div>
</div>