<div class="container">
  <div class="row">
    <div class='col-10 offset-1'>
      <table class="table table-hover table-inverse item-show">
        <h4 class="col-3 mt-5">商品詳細</h4>

          <% if @item.image.attached? %>
            <%= image_tag @item.get_image(100,100) %>
          <% else %>
            <%= image_tag 'default-image.jpg', size: "100x100" %>
          <% end %>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= "#{@item.price}円" %></td>
        </tr>
      </table>
      <div>
        <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success"%>
      </div>
    </div>
  </div>
</div>

