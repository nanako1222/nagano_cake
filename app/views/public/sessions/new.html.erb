<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h4 class="col-2 mt-5">ログイン</h4>

      <h6 class="col-4 mt-5 ml-4">会員の方はこちらからログイン</h6>

      <%= form_with model: @customer, url: customer_session_path, id: 'in_customer', class: 'in_customer', local: true do |f| %>
        <div class="row field d-grid text-center mt-3">
          <%= f.label :メールアドレス, class: "col-md-3 text-left offset-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class: "col-md-5" %>
        </div>

        <div class="row field d-grid text-center mt-3">
          <%= f.label :パスワード, class: "col-md-3 text-left offset-1" %>
          <%= f.password_field :password, autocomplete: "パスワード", class: "col-md-5" %>
        </div>

        <div class="mt-4 offset-4">
          <%= f.submit "ログイン", class: "btn btn-success mx-auto" %>
        </div>

        <h6 class="col-4 mt-5 ml-4">会員登録がお済みでない方</h6>
        <div class="row offset-2">
          <a class ="member_registration" href = "/customers/sign_up">こちら</a>
          <span>から新規登録を行ってください。</span>
        </div>
      <% end %>
    </div>
  </div>
</div>
