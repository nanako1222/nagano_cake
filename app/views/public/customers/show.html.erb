<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h4 class="col-4 mt-5">マイページ</h4>

      <table class="table table-hover table-inverse item-show mt-4">
        <h5 class="mt-4">
          登録情報
          <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success ml-4"%>
        </h5>
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code%></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>


