<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse item-show">
    <tr>
      <h2>マイページ</h2>
      <div>
        <%= link_to "編集する", edit_public_customers_path(@customer), class:"btn btn-success"%>
      </div>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code%></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.adress %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
</div>


