<h2>会員情報編集</h2>

<%= form_with model: @customer, url:customers_information_path, method: :patch do |f| %>

  <div class="field">
    <tr></tr>
      <p>氏名</p>
      <%= f.text_field :first_name, autofocus: true, required: true %>
      <%= f.text_field :last_name, autofocus: true, required: true %>
    </tr>
  </div>

  <div class="field">
    <p>フリガナ</p>
    <%= f.text_field :first_name_kana, autofocus: true, required: true %>
    <%= f.text_field :last_name_kana, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.number_field :telephone_number, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.submit '編集内容を保存', class:"btn btn-success" %>
  </div>
  <div>
    <%= link_to "退会する", customers_confirm_path(@customer), class:"btn btn-danger"%>
  </div>
<% end %>
