<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <p>名前</p>
    <%= f.label :（姓） %>
    <%= f.text_field :first_name, autofocus: true, required: true %>
    <%= f.label :（名） %>
    <%= f.text_field :last_name, autofocus: true, required: true %>
  </div>

  <div class="field">
    <p>フリガナ</p>
    <%= f.label :セイ %>
    <%= f.text_field :first_name_kana, autofocus: true, required: true %>
    <%= f.label :メイ %>
    <%= f.text_field :last_name_kana, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :adress, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.number_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success mx-auto btn-lg" %>
  </div>
<% end %>

