<div class="col-8 offset-md-1 mx-au">
    <div class="item-index">
      <h2>商品一覧</h2>

        <% @items.each do |item| %>
          <tr>
            <td>
              <% if item.image.attached? %>
                <%= image_tag item.get_image(100,100) %>
              <% else %>
                <%= image_tag 'default-image.jpg', size: "100x100" %>
              <% end %>
            </td>

            <td><%= link_to item.name, public_item_path(item.id) %></td>
            <td><%= "¥#{item.price}" %></td>
          </tr>
        <% end %>

    </div>
  </div>