<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse item-show">
        <h5>商品詳細</h5>
        <td>
          <% if @item.image.attached? %>
            <%= image_tag @item.get_image(100,100) %>
          <% else %>
            <%= image_tag 'default-image.jpg', size: "100x100" %>
          <% end %>
        </td>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= "#{@item.price}円" %></td>
        <td>
      </table>

      <%= form_with model: @cart_item, url:public_cart_items_path, method: :post do |f| %>
        <p>数量を選択して下さい</p>
        <%= f.select :amount, *[1..10], class: "form-select amount" %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit 'カートに入れる', class:"btn btn-success" %>
      <% end %>

    </div>
  </div>