        <div class="mt-3">
          <%= form_with model: @cart_item, url:cart_items_path, method: :post do |f| %>
            <%= f.select :amount, *[1..10], class: "form-select amount" %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.submit 'カートに入れる', class:"btn btn-success row ml-4" %>
          <% end %>
        </div>
