<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse cart_item-index">
    <h2>注文履歴一覧</h2>
    <thead>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </thead>
    <tbody>
    　<% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= "〒#{order.postal_code}" %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |item| %>
              <%= item.item.name %><br>
            <% end %>
          </td>
          <td><%= order.carriage + order.total_price %></td>
          <td><%= link_to "表示する", public_order_path(order), class:"btn btn-success"%></td>
        </tr>
      <% end %>
      <%= paginate @orders %>
    </tbody>
  </table>
</div>
